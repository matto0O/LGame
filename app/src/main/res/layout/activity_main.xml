<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A07F7F"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/d1"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/d2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c1"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/d2"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/d3"
        app:layout_constraintStart_toEndOf="@+id/d1"
        app:layout_constraintTop_toBottomOf="@+id/c2"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/d3"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/d4"
        app:layout_constraintStart_toEndOf="@+id/d2"
        app:layout_constraintTop_toBottomOf="@+id/c3"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/d4"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d3"
        app:layout_constraintTop_toBottomOf="@+id/c4"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/c2"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/d2"
        app:layout_constraintEnd_toStartOf="@+id/c3"
        app:layout_constraintStart_toEndOf="@+id/c1"
        app:layout_constraintTop_toBottomOf="@+id/b2"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/c3"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#00DDFF"
        app:layout_constraintBottom_toTopOf="@+id/d3"
        app:layout_constraintEnd_toStartOf="@+id/c4"
        app:layout_constraintStart_toEndOf="@+id/c2"
        app:layout_constraintTop_toBottomOf="@+id/b3"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/c4"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/d4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/c3"
        app:layout_constraintTop_toBottomOf="@+id/b4"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/c1"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/d1"
        app:layout_constraintEnd_toStartOf="@+id/c2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/b1"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/c1"
        app:layout_constraintEnd_toStartOf="@+id/b2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/b2"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/c2"
        app:layout_constraintEnd_toStartOf="@+id/b3"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/a2"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/b3"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#00DDFF"
        app:layout_constraintBottom_toTopOf="@+id/c3"
        app:layout_constraintEnd_toStartOf="@+id/b4"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/a3"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/b4"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/c4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b3"
        app:layout_constraintTop_toBottomOf="@+id/a4"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/a1"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintEnd_toStartOf="@+id/a2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/a2"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#00DDFF"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintEnd_toStartOf="@+id/a3"
        app:layout_constraintStart_toEndOf="@+id/a1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/a3"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#00DDFF"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintEnd_toStartOf="@+id/a4"
        app:layout_constraintStart_toEndOf="@+id/a2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/a4"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="selectedTile"
        android:scaleX="0.75"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/b4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <Button
        android:id="@+id/clearP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:onClick="clear"
        android:text="clear"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/commitP1"
        app:layout_constraintTop_toBottomOf="@+id/d2"
        app:layout_constraintVertical_bias="0.511" />

    <Button
        android:id="@+id/restartP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:onClick="restart"
        android:text="restart"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/commitP1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d2"
        app:layout_constraintVertical_bias="0.511" />

    <Button
        android:id="@+id/commitP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:onClick="commit"
        android:text="commit"
        app:backgroundTint="#DD2C00"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clearP1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/restartP1"
        app:layout_constraintTop_toBottomOf="@+id/d2"
        app:layout_constraintVertical_bias="0.511" />

    <Button
        android:id="@+id/clearP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:onClick="clear"
        android:rotation="180"
        android:text="clear"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/a2"
        app:layout_constraintEnd_toStartOf="@+id/commitP2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restartP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:onClick="restart"
        android:rotation="180"
        android:text="restart"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/a2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/commitP2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/commitP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:onClick="commit"
        android:rotation="180"
        android:text="commit"
        android:textColor="@color/black"
        app:backgroundTint="#83EBFB"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/a2"
        app:layout_constraintEnd_toStartOf="@+id/restartP2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clearP2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewP1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/border_red"
        android:clickable="true"
        android:gravity="center"
        android:onClick="textViewClick"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/d2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c2"
        app:layout_constraintVertical_bias="0.522" />

    <TextView
        android:id="@+id/textViewP2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/border_blue"
        android:clickable="true"
        android:gravity="center"
        android:onClick="textViewClick"
        android:rotation="180"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a2" />

</androidx.constraintlayout.widget.ConstraintLayout>